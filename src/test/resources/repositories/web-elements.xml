<?xml version="1.0" encoding="UTF-8"?>
<Pages xmlns="http://chameleon.ibs-qa.ru/schema/web-elements">
    <Page name="Список товаров" locator="//h5[text()='Список товаров']">
        <Button name="Кнопка Добавить" locator="//button[text()='Добавить']"/>
        <Collection name="Таблица" locator="//table/tbody/tr">
            <StaticText name="Наименование" locator="./td[1]"/>
            <StaticText name="Тип" locator="./td[2]"/>
            <StaticText name="Экзотический" locator="./td[3]"/>
        </Collection>
        <StaticText name="Заголовок список товаров" locator="//h5[text()='Список товаров']"/>
    </Page>
    <Page name="Окно добавления товара" locator="//h5[text()='Добавление товара']">
        <Button name="Кнопка Сохранить" locator="//*[@id='save']"/>
        <TextInput name="Поле Наименование" locator="//*[@id='name']"/>
        <ComboBox name="Поле Тип" locator="//*[@id='type']"/>
        <CheckBox name="Чекбокс Экзотический" locator="//*[@id='exotic']"/>
        <StaticText name="Заголовок окна добавления товара" locator="//h5[text()='Добавление товара']"/>
    </Page>
</Pages>